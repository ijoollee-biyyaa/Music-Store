@model List<SingerTbl>

<div class="container">
    <div class="row pt-4 pb-3 offset-md-1">
        <div class="col-6">
            <h2 class="text-primary">Singer List</h2>
        </div>
        <div class="col-6  text-end ">
            <a asp-controller="Singer" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>  Add New Singer
            </a>
        </div>
        <div class="row py-2">
            <table class="table table-borderless table-responsive table-striped">
                <thead>
                    <tr>
                        <th>Profile Picture</th>
                        <th>Singer Title</th>
                        <th>Singer Bio</th>
                        <th></th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                         <td class="align-middle">
                        <img  src="@item.ProfilePicture"  style="width:100px" height="100"/>
                         </td>
                            <td>@item.SingerName</td>
                            <td>@item.SingerBio</td>
                            <td>
                                <div class="btn btn-group float-end" role="group">
                                    <a asp-controller="Singer" asp-action="Edit" asp-route-id="@item.SingerId" class="btn btn-primary"><i class="bi bi-pencil-square"></i>Edit</a>
                                    <a asp-controller="Singer" asp-action="Delete" asp-route-id="@item.SingerId" class="btn btn-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>