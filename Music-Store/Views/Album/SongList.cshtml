@model List<SongTbl>

<div class="card shadow border-0 mt-1 mb-5">
        <div class="card-header   text-light py-4">
            <div class="row">
                <div class="col-4">
                <div>
                    <img src="@Model.FirstOrDefault().Singer.ProfilePicture" width="220px" height="200px" class="rounded" />
                </div>
                </div>
                <div class="col-8">
                <div class=" text-center">
                    <h3 class="text-dark text-uppercase">@Model.FirstOrDefault().Album.AlbumTitle</h3>
                    <p class="text-dark fw-semibold mb-0">@Model.FirstOrDefault().Singer.SingerName</p>
                 
                </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            
                <div class="row">
                 
                      <div class="col-12">

                        <table class="table table-borderless">
                            <thead>
                                <tr>
                                    <th class="text-primary">Song Name</th>
                                    <th>Language</th>
                            <th>Release Date</th>
                                    <th class="text-sm-center text-md-center"> music</th>
                                   
                                    
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>@item.SongName</td>
                                        <td>@item.Language.LanguageName</td>
                                        <td>@item.SongRelease</td>
                                        <td class="text-center">
                                            <audio controls>
                                                <source src="@item.SongFilepath" />
                                            </audio>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        </div>
                   

                  </div> 

               
               
            </div>
        </div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
    var js = jQuery.noConflict(true);
    js(document).ready(function () {

        js("audio").on("play", function () {
            js("audio").not(this).each(function (index, audio) {
                audio.pause();
            })
        })
    })


</script>
